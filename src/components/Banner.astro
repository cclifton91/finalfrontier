---
import { getImage } from "astro:assets"
import starsBG from "../assets/dana-luig.jpg"

// Process the image
const optimizedBackground = await getImage({
	src: starsBG,
	format: "webp",
})
---

<section class="relative py-36">
	<div class="absolute inset-0 bg-fixed bg-center bg-no-repeat bg-cover" style={`background-image: url(${optimizedBackground.src});`}></div>
	<div class="absolute inset-0 bg-black/50"></div>
	<div class="container relative px-4 mx-auto">
		<div class="mx-auto mb-20 text-center">
			<h2 class="mt-8 text-6xl font-bold lg:text-7xl font-heading text-amber-300 font-title">Boldly Selling Where No One Has Sold Before!</h2>
		</div>
	</div>
</section>

<style>
	/* Optional: Add additional parallax enhancement */
	.bg-fixed {
		background-attachment: fixed;
	}
</style>
