---
import { Icon } from "astro-icon/components"
import { Image } from "astro:assets"
import heroImg from "../assets/haroon-ameer.jpg"
---

<section class="relative bg-gray-950 overflow-hidden" x-data="{ mobileNavOpen: false }" id="home">
	<div class="absolute inset-0">
		<Image class="mx-auto h-full lg:w-1/2 object-cover" src={heroImg} alt="A bottom up shot of a house and the stars" />
	</div>
	<nav class="relative border-b border-gray-50">
		<div class="flex items-center px-4 lg:px-8">
			<div class="h-full py-8 pr-4 lg:pr-8 border-r border-gray-50">
				<button class="p-2" x-on:click="mobileNavOpen = !mobileNavOpen">
					<svg class="w-10 h-3" width="39" height="13" viewBox="0 0 39 13" fill="none" xmlns="http://www.w3.org/2000/svg"
						><rect width="39" height="2" rx="1" fill="#C4C4C4"></rect><rect x="19" y="11" width="20" height="2" rx="1" fill="#C4C4C4"></rect></svg
					>
				</button>
			</div>
			<!-- Logo -->
			<div class="ml-8"><a href="#home"><Icon name="FF" class="size-18" /></a></div>
			<div class="hidden lg:block ml-auto">
				<a class="inline-block px-12 py-4 text-white font-bold border border-gray-200 hover:bg-gray-200 hover:text-black rounded-full font-paragraph transition duration-200 font-sans" href="#"
					>Contact Us</a
				>
			</div>
		</div>
	</nav>
	<div class="relative container px-4 pt-24 md:pt-40 pb-32 mx-auto">
		<div class="flex flex-wrap items-center -mx-4 mb-12 md:mb-24">
			<div class="w-full lg:w-1/2 px-4 mb-20 lg:mb-0">
				<span class="text-lg lg:text-2xl font-bold text-white font-paragraph">Real Estate Investement</span>
				<h2 class="mt-8 mb-12 lg:mb-16 text-6xl md:text-9xl text-white font-bold">The <span class="text-sky-600">Final Frontier</span> of Real Estate</h2>
				<a class="inline-block px-12 py-5 text-lg text-black font-bold bg-amber-400 hover:bg-amber-500 rounded-full transition duration-200 font-paragraph" href="#">Make It So</a>
			</div>
			<div class="hidden lg:block lg:w-1/2 px-4">
				<div class="flex justify-end">
					<button class="inline-flex items-center justify-center w-28 h-28 text-white rounded-full border border-gray-100 hover:border-white">
						<svg class="h-6 w-6" width="19" height="34" viewBox="0 0 19 34" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path
								d="M9.35111 33.2228L0.834172 24.7059L1.89879 23.6413L9.13287 30.8753L9.12754 0.751973L10.6287 0.751974L10.634 30.8753L17.3357 24.1736L18.4004 25.2382L10.4157 33.2228C10.1217 33.5168 9.64512 33.5168 9.35111 33.2228Z"
								fill="currentColor"></path>
						</svg>
					</button>
					<p class="hidden lg:block text-gray-200 transform rotate-90">Scroll for more</p>
				</div>
			</div>
		</div>
	</div>
	<div :class="{ 'hidden': !mobileNavOpen, 'block': mobileNavOpen }" class="fixed top-0 left-0 bottom-0 w-5/6 max-w-sm z-50 hidden">
		<div x-on:click="mobileNavOpen = !mobileNavOpen" class="fixed inset-0 bg-gray-800 opacity-80"></div>
		<nav class="relative flex flex-col py-8 h-full w-full bg-white overflow-y-auto">
			<div class="flex items-center mb-16 pr-6">
				<a class="ml-10 mr-auto text-2xl text-gray-800 font-bold" href="#"> <Icon name="FF" class="size-12" /> </a>
			</div>
			<div>
				<ul>
					<li class="mb-1 px-10"><a class="block pl-8 py-4 text-xl text-gray-800 hover:bg-blueGray-50 rounded-xl" href="#">Home</a></li>
					<li class="mb-1 px-10"><a class="block pl-8 py-4 text-xl text-gray-800 hover:bg-blueGray-50 rounded-xl" href="#">About</a></li>
					<li class="mb-1 px-10"><a class="block pl-8 py-4 text-xl text-gray-800 hover:bg-blueGray-50 rounded-xl" href="#">Contact</a></li>
				</ul>
			</div>
		</nav>
	</div>
</section>
