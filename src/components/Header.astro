---
import { Icon } from "astro-icon/components"
import { Image } from "astro:assets"
import heroImg from "../assets/haroon-ameer.jpg"
---

<section class="relative overflow-hidden bg-gray-950" x-data="{ mobileNavOpen: false }" id="home">
	<div class="absolute inset-0">
		<Image src={heroImg} class="object-cover h-full mx-auto lg:w-1/2" fit="cover" width={800} height={1200} loading="eager" alt="A bottom up shot of a house and the stars" />
	</div>
	<nav class="relative border-b border-gray-50">
		<div class="flex items-center px-4 lg:px-8">
			<div class="h-full py-8 pr-4 border-r lg:pr-8 border-gray-50">
				<button class="p-2" x-on:click="mobileNavOpen = !mobileNavOpen" aria-label="open mobile menu">
					<svg class="w-10 h-3" width="39" height="13" viewBox="0 0 39 13" fill="none" xmlns="http://www.w3.org/2000/svg"
						><rect width="39" height="2" rx="1" fill="#C4C4C4"></rect><rect x="19" y="11" width="20" height="2" rx="1" fill="#C4C4C4"></rect></svg
					>
				</button>
			</div>
			<!-- Logo -->
			<div class="ml-8"><a href="#home" aria-label="Go to top of page"><Icon name="FFred&blue" class="size-18" /></a></div>
			<div class="hidden ml-auto lg:block">
				<a
					class="inline-block px-12 py-4 font-sans font-bold text-white transition duration-200 border border-gray-200 rounded-full hover:bg-gray-200 hover:text-black font-paragraph"
					href="#contact"
					aria-label="go to contact form">Contact Us</a
				>
			</div>
		</div>
	</nav>
	<div class="container relative px-4 pt-24 pb-32 mx-auto md:pt-40">
		<div class="flex flex-wrap items-center mb-12 -mx-4 md:mb-24">
			<div class="w-full px-4 mb-20 lg:w-1/2 lg:mb-0">
				<span class="text-lg font-bold text-white lg:text-2xl font-paragraph">Real Estate Investement</span>
				<h2 class="mt-8 mb-12 text-6xl font-bold text-white lg:mb-16 md:text-9xl">The <span class="text-sky-600">Final Frontier</span> of Real Estate</h2>
				<a class="inline-block px-12 py-5 text-lg font-bold text-white transition duration-200 bg-red-800 rounded-full hover:bg-red-900 font-paragraph" href="#contact" aria-label="go to contact form"
					>Make It So</a
				>
			</div>
			<div class="hidden px-4 lg:block lg:w-1/2">
				<div class="flex justify-end">
					<button class="inline-flex items-center justify-center text-white border border-gray-100 rounded-full w-28 h-28 hover:border-white" aria-label="contact button">
						<svg class="w-6 h-6" width="19" height="34" viewBox="0 0 19 34" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path
								d="M9.35111 33.2228L0.834172 24.7059L1.89879 23.6413L9.13287 30.8753L9.12754 0.751973L10.6287 0.751974L10.634 30.8753L17.3357 24.1736L18.4004 25.2382L10.4157 33.2228C10.1217 33.5168 9.64512 33.5168 9.35111 33.2228Z"
								fill="currentColor"></path>
						</svg>
					</button>
					<p class="hidden text-gray-200 transform rotate-90 lg:block">Scroll for more</p>
				</div>
			</div>
		</div>
	</div>
	<div :class="{ 'hidden': !mobileNavOpen, 'block': mobileNavOpen }" class="fixed top-0 bottom-0 left-0 z-50 hidden w-5/6 max-w-sm">
		<div x-on:click="mobileNavOpen = !mobileNavOpen" class="fixed inset-0 bg-gray-800 opacity-80"></div>
		<nav class="relative flex flex-col w-full h-full py-8 overflow-y-auto bg-white">
			<div class="flex items-center pr-6 mb-16">
				<a class="ml-10 mr-auto text-2xl font-bold text-gray-800" href="#home" aria-label="go to top of page"> <Icon name="FF" class="size-12" /> </a>
			</div>
			<div>
				<ul>
					<li class="px-10 mb-1"><a class="block py-4 pl-8 text-xl text-gray-800 hover:bg-blueGray-50 rounded-xl" href="#home" aria-label="go to top of page">Home</a></li>
					<li class="px-10 mb-1"><a class="block py-4 pl-8 text-xl text-gray-800 hover:bg-blueGray-50 rounded-xl" href="#about" aria-label="go to about section">About</a></li>
					<li class="px-10 mb-1"><a class="block py-4 pl-8 text-xl text-gray-800 hover:bg-blueGray-50 rounded-xl" href="#contact" aria-label="go to bottom of page">Contact</a></li>
				</ul>
			</div>
		</nav>
	</div>
</section>
